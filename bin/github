#!/bin/bash -e

repo=${1:-origin}
git_url=$(git config -l | grep "remote.${repo}.url")
if [[ -z $git_url ]]; then
	exit 1
fi

ruby_script=$(cat << 'EOF'
url = ARGV[0].split("=").last
url = url.gsub(":", "/").gsub("git@", "https://") if url.start_with?("git@")
url = url.gsub(".git", "")
puts url
EOF
)

page_url=$(ruby -e "${ruby_script}" -- "${git_url}")
open "$page_url"
