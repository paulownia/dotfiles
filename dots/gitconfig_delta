# vim: ft=gitconfig
#
# add following setting to .gitconfig
#
# [include]
#   path = ~/.gitconfig_delta
#

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
  navigate = true
  light = false
  side-by-side = true
  line-number = true
  file-style = bold yellow ul
[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

