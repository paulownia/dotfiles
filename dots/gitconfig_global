# vim: ft=gitconfig
#
# exec the commands below
#
#   $ brew install git-delta difftastic
#   $ git config --add --global include.path ~/.gitconfig_global
#

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
  navigate = true
  light = false
  side-by-side = true
  line-number = true
  file-style = bold yellow ul

[merge]
  conflictstyle = diff3
	ff = false

[pull]
	ff = only

[diff]
  colorMoved = default
  tool = difftastic

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[pager]
  difftool = true

[alias]
  changed = "!sh -c 'git diff $1^ $1' -"
  difft = difftool
