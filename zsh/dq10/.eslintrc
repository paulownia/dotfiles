{
	"extends": "eslint:recommended",
	"parserOptions" : {
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true
	},
	"rules": {
		"semi": 2,
		"no-console": 1,
		"comma-dangle": [2, "only-multiline"],
		"quotes": [2, "single"],
		"no-irregular-whitespace": 2,
		"no-spaced-func": 2,
		"block-spacing": 2
	}
}
